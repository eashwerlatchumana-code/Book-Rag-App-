{
  "info": {
    "name": "RAG Chat Backend API",
    "description": "Collection of API endpoints for RAG Chat Backend",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8000",
      "type": "string"
    },
    {
      "key": "user_id",
      "value": "",
      "type": "string"
    },
    {
      "key": "chat_id",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Health & Info",
      "item": [
        {
          "name": "Root - API Info",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/",
              "host": ["{{base_url}}"]
            }
          }
        },
        {
          "name": "Health Check",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/health",
              "host": ["{{base_url}}"],
              "path": ["health"]
            }
          }
        }
      ]
    },
    {
      "name": "Users",
      "item": [
        {
          "name": "Register User",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('user_id', response.user_id);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"testuser@example.com\",\n  \"name\": \"Test User\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/users/register",
              "host": ["{{base_url}}"],
              "path": ["api", "users", "register"]
            }
          }
        },
        {
          "name": "Login User (by email)",
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/users/login?email=testuser@example.com",
              "host": ["{{base_url}}"],
              "path": ["api", "users", "login"],
              "query": [
                {
                  "key": "email",
                  "value": "testuser@example.com"
                }
              ]
            }
          }
        },
        {
          "name": "Get User by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/users/{{user_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "users", "{{user_id}}"]
            }
          }
        }
      ]
    },
    {
      "name": "Books",
      "item": [
        {
          "name": "Upload and Process Book",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "file",
                  "type": "file",
                  "src": []
                },
                {
                  "key": "user_id",
                  "value": "{{user_id}}",
                  "type": "text"
                },
                {
                  "key": "book_title",
                  "value": "My Test Book",
                  "type": "text"
                },
                {
                  "key": "author",
                  "value": "Test Author",
                  "type": "text"
                }
              ]
            },
            "url": {
              "raw": "{{base_url}}/api/books/upload-and-process",
              "host": ["{{base_url}}"],
              "path": ["api", "books", "upload-and-process"]
            }
          }
        },
        {
          "name": "Get User Books",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/books/user/{{user_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "books", "user", "{{user_id}}"]
            }
          }
        }
      ]
    },
    {
      "name": "Chats",
      "item": [
        {
          "name": "Create New Chat",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('chat_id', response.chat_id);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"user_id\": \"{{user_id}}\",\n  \"question\": \"What is this book about?\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/chats/new",
              "host": ["{{base_url}}"],
              "path": ["api", "chats", "new"]
            }
          }
        },
        {
          "name": "Continue Chat",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"chat_id\": \"{{chat_id}}\",\n  \"question\": \"Can you tell me more about the main characters?\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/chats/continue",
              "host": ["{{base_url}}"],
              "path": ["api", "chats", "continue"]
            }
          }
        },
        {
          "name": "Get User Chats",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/chats/user/{{user_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "chats", "user", "{{user_id}}"]
            }
          }
        },
        {
          "name": "Get Chat by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/chats/{{chat_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "chats", "{{chat_id}}"]
            }
          }
        },
        {
          "name": "Delete Chat",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/chats/{{chat_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "chats", "{{chat_id}}"]
            }
          }
        }
      ]
    },
    {
      "name": "Messages",
      "item": [
        {
          "name": "Get Chat Messages",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/messages/chat/{{chat_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "messages", "chat", "{{chat_id}}"]
            }
          }
        }
      ]
    }
  ]
}
